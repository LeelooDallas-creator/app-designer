extends ../layout

block content
  h1 Créer un meuble
  form(action="/furnitures/create" method="POST")
    div
      label Nom :
      input(type="text" name="name" required)
    div
      label Catégorie :
      select(name="category" required)
        each c in categories
          option(value=c._id)= c.name
    div
      label Matériaux :
      select(name="materials" multiple size=5)
        each m in materials
          option(value=m._id)= `${m.name} (${m.type})`
    div
      button(type="submit") Créer
